.archives-wrap{
  position: relative;
  margin: 0 30px;
  padding-right: 1.5em;
  border-bottom: 1px solid #eee;
  background: #fff;
  &:first-child{
    margin-top: 30px;
  }
  &:last-child{
    margin-bottom: 80px;
  }
  .archive-year-wrap{
    line-height: 35px;
    width: 200px;
    position: absolute;
    padding-top: 20px;
    font-size: 1.8em;
  }
  .archive-year-wrap a{
    color: #666;
    font-weight: bold;
    padding-left: 48px;
  }
}

.archives {
  position:relative;
  .article-info{
    border: none;
  }
  .archive-article {
    margin-left:160px;
    padding:0.5em 0;
    border-bottom: 1px solid #eee;
    border-top: 1px solid #fff;
    position: relative;
    &:first-child{
      border-top: 1em;
      padding-top: 20px;
    }
    &:last-child{
      border-bottom: none;
    }
  }

  .archive-article-title {
    font-size: 18px;
    color: #333;
    transition: color 0.3s;
    &:hover{
      color: #657b83;
    }
    span{
      display: block;
      color: #a8a8a8;
      font-size: 12px;
      line-height: 14px;
      height: 7px;
      padding-left: 2px;
      &:before{
        display: inline-block;
        content: "â€œ";
        font-family: serif;
        font-size: 30px;
        float: left;
        margin: 4px 4px 0 -12px;
        color: #c8c8c8;
      }
    }
  }
}

.archive-article-inner{
  .archive-article-header{
    position: relative;
  }
  .article-meta{
    position: relative;
    float: right;
    margin-top: -10px;
    color: #555;
    background: none;
    text-align: right;
    width: auto;
    .article-date{
      time{
        color: #aaa;
      }
    }
    .archive-article-date, .article-tag-list{
      margin-right: 1em;
      display: -moz-inline-stack;
      display: inline-block;
      vertical-align: middle;
      zoom: 1;
      color: #666;
      font-size: 14px;
    }
    .archive-article-date{
     cursor: default;
     font-size: 14px;
     margin-bottom: 5px;
     margin-top: -10px;
     time{
      &:before {
        content: "\f073";
        color: #999;
        position: relative;
        margin-right: 10px;
        font: 16px FontAwesome;
      }
     }
    }
    .article-category{
      &:before{
        float: left;
        margin-top: 1px;
        left: 15px;
      }
      .article-category-link{
        width: auto;
        max-width: 83px;
        padding-left: 10px;
      }
    }
    .article-tag-list{
      margin-top: 0px;
      &:before{
        left: 15px;
      }
      .article-tag-list-item{
        display: inline-block;
        width: auto;
        max-width: 83px;
        padding-left: 8px;
        font-size: 12px;
      }
    }
  }
}

.archives-wrap {
  background: rgba(255,255,255,.4);
  .archives {
    background: transparent;
  }
}
