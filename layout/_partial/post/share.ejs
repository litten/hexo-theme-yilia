<%
  var sUrl = url.replace(/index\.html$/, '');
  sUrl = /^(http:|https:)\/\//.test(sUrl) ? sUrl : 'http:' + sUrl;
%>
<div class="share-icons">
    <a class="weibo share-sns" data-type="weibo">
      <i class="icon icon-weibo"></i>
    </a>
    <a class="weixin share-sns wxFab" data-type="weixin">
      <i class="icon icon-weixin"></i>
    </a>
    <a class="qzone share-sns" data-type="qzone">
      <i class="icon icon-qzone"></i>
    </a>
    <a class="google share-sns" data-type="google">
      <i class="icon icon-google"></i>
    </a>
</div>

<div class="page-modal wx-share js-wx-box">
  <a class="close js-modal-close" ><i class="icon icon-close"></i></a>
  <p>扫一扫，分享到微信</p>
  <div class="wx-qrcode">
    <img src="<%- 'qrcode' in locals ? qrcode(sUrl) : '//img.fanhaobai.com/qrcode.php?url=' + sUrl  %>" alt="微信分享二维码">
  </div>
</div>

<div class="mask js-mask"></div>